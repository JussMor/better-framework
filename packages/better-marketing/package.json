{
  "name": "better-marketing",
  "version": "0.1.0",
  "description": "A comprehensive marketing framework for TypeScript applications",
  "keywords": [
    "marketing",
    "email",
    "sms",
    "analytics",
    "campaigns",
    "automation",
    "typescript",
    "framework"
  ],
  "homepage": "https://better-marketing.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/everfaz/better-marketing.git"
  },
  "license": "MIT",
  "author": {
    "name": "Everfaz Team",
    "email": "hello@everfaz.com"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json",
    "./types": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/types/index.js",
      "import": "./dist/types/index.mjs"
    },
    "./crypto": {
      "types": "./dist/crypto/index.d.ts",
      "require": "./dist/crypto/index.js",
      "import": "./dist/crypto/index.mjs"
    },
    "./test": {
      "types": "./dist/test/index.d.ts",
      "require": "./dist/test/index.js",
      "import": "./dist/test/index.mjs"
    },
    "./adapters/memory": {
      "types": "./dist/adapters/memory/index.d.ts",
      "require": "./dist/adapters/memory/index.js",
      "import": "./dist/adapters/memory/index.mjs"
    },
    "./adapters/kysely": {
      "types": "./dist/adapters/kysely-adapter/index.d.ts",
      "require": "./dist/adapters/kysely-adapter/index.js",
      "import": "./dist/adapters/kysely-adapter/index.mjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "require": "./dist/client/index.js",
      "import": "./dist/client/index.mjs"
    },
    "./client/react": {
      "types": "./dist/client/react/index.d.ts",
      "require": "./dist/client/react/index.js",
      "import": "./dist/client/react/index.mjs"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "require": "./dist/api/index.js",
      "import": "./dist/api/index.mjs"
    },
    "./plugins/campaigns": {
      "types": "./dist/plugins/campaigns/index.d.ts",
      "require": "./dist/plugins/campaigns/index.js",
      "import": "./dist/plugins/campaigns/index.mjs"
    },
    "./api/call": {
      "types": "./dist/api/call.d.ts",
      "require": "./dist/api/call.js",
      "import": "./dist/api/call.mjs"
    },
    "./nextjs": {
      "types": "./dist/integrations/nextjs/index.d.ts",
      "require": "./dist/integrations/nextjs/index.js",
      "import": "./dist/integrations/nextjs/index.mjs"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "require": "./dist/db/index.js",
      "import": "./dist/db/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "turbo": {
    "outputs": [
      "dist/**"
    ]
  },
  "scripts": {
    "build": "unbuild --clean",
    "dev": "concurrently \"unbuild --watch\" \"npm run dev:types\"",
    "dev:types": "tsc --project tsconfig.declarations.json --watch",
    "build:types": "tsc --project tsconfig.declarations.json",
    "stub": "unbuild --stub",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "pretest": "pnpm prisma:normal:push && pnpm prisma:number-id:push",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@better-fetch/fetch": "^1.1.18",
    "better-call": "^1.0.16",
    "defu": "6.1.4",
    "jose": "^5.10.0",
    "kysely": "0.28.5",
    "nanostores": "^0.11.4",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.6",
    "@types/react": "19.1.0",
    "@types/bun": "^1.2.21",
    "better-sqlite3": "11.10.0",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "next": "^15.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "5.9.2",
    "unbuild": "^3.6.1",
    "vitest": "^1.4.4"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "typescript": ">=4.9.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "unbuild": {
    "failOnWarn": false
  }
}
